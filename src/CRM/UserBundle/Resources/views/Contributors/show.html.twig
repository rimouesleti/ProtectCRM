{% extends "::base.html.twig" %}

{% block mainContent %}

    <div class="" >
        <!-- start: PAGE CONTENT -->
        <div class="row">
            <div class="col-md-12">
                <!-- start: DYNAMIC TABLE PANEL -->
                <div class="panel panel-white">
                    <div class="panel-heading">
                        <h3>{% trans %}Users list{% endtrans %}</h3>
                        <hr>
                    </div> 
                    <div class="panel-body">
                        {% if is_granted('ROLE_ADMIN') %}
                            <div class="col-md-12" style="padding: 20px;">
                                <a class="btn btn-success add-row" href="{{path('fos_user_registration_register')}}">
                                    {% trans %}Add New{% endtrans %} <i class="fa fa-plus"></i>
                                </a>
                            </div>
                            <table class="table table-striped table-hover table-full-width display" cellspacing="0" width="100%" id="example">

                                <thead>
                                    <tr>
                                        <th class="center">#</th>
                                        <th class="center">{% trans %}Name{% endtrans %}</th>
                                        <th>Email</th>
                                        <th>Mobile</th>
                                        <th class="hidden-xs">{% trans %}Last Logged In{% endtrans %}</th>
                                        <th class="hidden-xs">Role</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for user in Users %}	
                                        <tr>

                                            <td class="center">

                                                <img src="{{ asset('bundles/user/images/anonymous.jpg') }}" alt="" width="25" height="25"></td>


                                            <td>{{user.lastName}} {{user.firstName}}</td>
                                            <td>{{user.email}}</td>                           
                                            <td >{{user.phone}}</td>
                                            <td class="hidden-xs">{{user.lastLogin|date('Y-m-d H:i')}}</td>
                                            <td class="hidden-xs">{% for role in user.roles %}
                                                {% if role == 'ROLE_SUPER_ADMIN' %}
                                                    <span class="label label-sm label-info">Super Admin</span>
                                                {% elseif role == 'ROLE_ADMIN' %}
                                                    <span class="label label-sm label-danger">Admin</span>
                                                {% else %}
                                                    <span class="label label-sm label-success">User</span>
                                                {% endif %}  
                                            {% endfor %}</td>

                                        <td class="center">
                                            <div>
                                                <a href="{{ path('contributor/delete', {'id': user.id}) }}" class="btn btn-xs btn-red tooltips" data-placement="top" data-original-title="{% trans %}Remove{% endtrans %}" ><i class="fa fa-times fa fa-white"></i></a>

                                            </div>


                                        </td>

                                    </tr>


                                    {% endfor %}	
                                    </tbody>
                                </table>
                                {%else%}
                                    <div class="alert alert-danger" role="alert">
                                        <i class="fa fa-exclamation-triangle"></i> {% trans %}You don't have enough privilege to view this list{% endtrans %}.

                                    </div>
                                    {% endif %}
                                    </div>
                                </div>
                                <!-- end: DYNAMIC TABLE PANEL -->
                            </div>
                        </div>

                        <!-- end: PAGE CONTENT-->


                    </div>



                    {%endblock%}