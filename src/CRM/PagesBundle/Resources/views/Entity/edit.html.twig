
{% extends "::base.html.twig" %}




{% block mainContent %}

    {% stylesheets  filter='cssrewrite' 
   'bundles/pages/css/summernote/dist/summernote.css'
  'bundles/pages/js/select2-3.5.1/select2.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    <div class="" >
        <div class="row" style="padding-top: 2%;" >
            <ol class="breadcrumb" style="background: white">
                <li><a href="{{ path('entities') }}">{% trans %}Companies{% endtrans %}</a></li>           
                <li class="active">{% trans %}Edit{% endtrans %} <strong>{{entity.name}}</strong></li>
            </ol>
            <hr> 

        </div>
        <!-- start: PAGE CONTENT -->
        <div class="row">

            <div class="col-md-12">
                <!-- start: DYNAMIC TABLE PANEL -->
                <div class="panel panel-white">

                    <div class="panel-body">


                        <form action="{{ path('entity/edit',{'id':entity.id}) }}" method="post" {{ form_enctype(form) }} >

                            <div class="col-md-6 " style="border-right: 1px solid #DDDDDD; padding-right: 15px;">
                                <div class="form-group">
                                    {{ form_label(form.name, 'Company Name') }}<span class="symbol required"></span>
                                    {{ form_widget(form.name) }}
                                </div>


                                <div class="form-group">
                                    {% trans %}Status{% endtrans %}<span class="symbol required"></span>
                                    {{ form_widget(form.type) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.speciality, 'Speciality') }}<span class="symbol required"></span>
                                    {{ form_widget(form.speciality) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.email, 'email') }}<span class="symbol required"></span>
                                    {{ form_widget(form.email) }}
                                </div>


                                <div class="form-group">
                                    {{ form_label(form.phone, 'phone') }}<span class="symbol required"></span>
                                    {{ form_widget(form.phone) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.website, 'Website') }}
                                    {{ form_widget(form.website) }}
                                </div>

                                <div id="employeesLabel" class="form-group" style="display:none;">
                                    {{ form_label(form.employees_number, 'Employees number') }}
                                    {{ form_widget(form.employees_number) }}
                                </div>
                                <div id="faxLabel" class="form-group" style="display:none;">
                                    {{ form_label(form.fax, 'Fax') }}
                                    {{ form_widget(form.fax) }}
                                </div>
                                <div class="form-group">
                                    <label for="contact" style="font-weight: bold;">{% trans %}Contacts{% endtrans %}</label>
                                    {{ form_widget(form.contact, { 'attr': {'style': 'width:100% '} }) }}
                                </div> 

                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.country, 'Country') }}<span class="symbol required"></span>
                                    {{ form_widget(form.country) }}

                                </div>
                                <div class="form-group">

                                    {{ form_label(form.city, 'City') }}<span class="symbol required"></span>
                                    {{ form_widget(form.city) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.address, 'Address') }}
                                    {{ form_widget(form.address) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.zip_code, 'Zip code') }}</span>
                                    {{ form_widget(form.zip_code) }}
                                </div>
                                <div class="form-group">
                                    <div class="thumbnail">
                                        {% if entity.profilePicture %}
                                            <img src="{{ asset("uploads/entities/") ~ entity.profilePicture  }} " alt="" width="150" height="150" >
                                        {% else %}

                                            <img src="{{ asset('bundles/pages/images/Company.png') }} " alt="" width="150" height="150">


                                        {% endif %}
                                        <div class="caption" style="text-align: center;">
                                            <button id="uploadBTN" class="btn btn-light-grey btn-file">
                                                <i class="fa fa-picture-o"></i> Select image     
                                            </button>

                                        </div>
                                    </div>
                                    {{ form_widget(form.file) }}
                                </div> 
                                <div class="clear"></div>

                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    {{ form_label(form.description, 'Description') }}

                                    {{ form_widget(form.description, { 'attr': {'class': 'summernote'} }) }}

                                </div>
                                {{ form_rest(form) }}

                                <button class="btn btn-success col-md-4 col-xs-12" type="submit" style="margin-top: 5%;float: right;">
                                    <i class="fa fa-floppy-o"></i> {% trans %}Submit{% endtrans %}
                                </button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


    {% javascripts 
 'bundles/pages/js/jquery-1.11.3.min.js' 
   'bundles/pages/css/bootstrap/js/bootstrap.min.js' 
  'bundles/pages/css/summernote/dist/summernote.min.js' 
'bundles/pages/js/select2-3.5.1/select2.min.js'
'bundles/pages/js/editEntity.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>

    {% endjavascripts %}



{%endblock%}
