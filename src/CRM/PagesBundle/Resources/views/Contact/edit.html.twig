{% extends "::base.html.twig" %}


{% block mainContent %}
    {% stylesheets  filter='cssrewrite' 
  'bundles/pages/css/summernote/dist/summernote.css'
  'bundles/pages/js/select2-3.5.1/select2.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    <div class="" >
        <div class="row" style="padding-top: 2%;" >
            <ol class="breadcrumb" style="background: white">
                <li><a href="{{ path('contacts') }}">{% trans %}Contacts{% endtrans %}</a></li>           
                <li class="active">{% trans %}Edit{% endtrans %}</li>
            </ol>
            <hr> 

        </div>
        <!-- start: PAGE CONTENT -->
        <div class="row">

            <div class="col-md-12">
                <!-- start: DYNAMIC TABLE PANEL -->
                <div class="panel panel-white">
                   
                    <div class="panel-body">


                        <form action="{{ path('contact/edit',{'id':contact.id}) }}" method="post" {{ form_enctype(form) }} >

                            <div class="col-md-6 " style="border-right: 1px solid #DDDDDD; padding-right: 15px;">

                                <div class="form-group">
                                    <label for="firstname" style="font-weight: bold;">{% trans %}FirstName{% endtrans %}<span class="symbol required"></span></label>
                                        {{ form_widget(form.firstname) }}
                                </div>


                                <div class="form-group">
                                    <label for="lastname" style="font-weight: bold;">{% trans %}LastName{% endtrans %}<span class="symbol required"></span></label>
                                        {{ form_widget(form.lastname) }}
                                </div>


                                <div class="form-group">
                                    <label for="gender" style="font-weight: bold;"> {% trans %}Gender{% endtrans %}</label>
                                    {{ form_widget(form.gender) }}
                                </div>
                                <div class="form-group">
                                    <label for="function" style="font-weight: bold;"> {% trans %}Function{% endtrans %}</label>
                                    {{ form_widget(form.function) }}
                                </div>

                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.phone, 'Phone') }}<span class="symbol required"></span>
                                    {{ form_widget(form.phone) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.email, 'Email') }}<span class="symbol required"></span>
                                    {{ form_widget(form.email) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.country, 'Country') }}
                                    {{ form_widget(form.country) }}

                                </div>
                                <div class="form-group">

                                    {{ form_label(form.city, 'City') }}
                                    {{ form_widget(form.city) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.address, 'Address') }}
                                    {{ form_widget(form.address) }}
                                </div>


                                <div class="clear"></div>

                            </div>
                            <div class="col-md-12">


                                {{ form_rest(form) }}

                                <button class="btn btn-success col-md-4 col-xs-12" type="submit" style="margin-top: 5%;float: right;">
                                    <i class="fa fa-floppy-o"></i> {% trans %}Submit{% endtrans %}
                                </button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% javascripts 
   'bundles/pages/js/jquery-1.11.3.min.js' 
   'bundles/pages/css/bootstrap/js/bootstrap.min.js' 
  'bundles/pages/css/summernote/dist/summernote.min.js' 
'bundles/pages/js/select2-3.5.1/select2.min.js'
'bundles/pages/js/editEntity.js'

    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>

    {% endjavascripts %}



{%endblock%}